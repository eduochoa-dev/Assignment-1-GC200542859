<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.taskproject.DeleteTaskController">
   <children>
      <Text fx:id="instructions" fill="#291ca1" layoutX="225.0" layoutY="77.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Delete Task">
         <font>
            <Font name="Arial Bold" size="27.0" />
         </font>
      </Text>
      <ComboBox fx:id="taskBox" layoutX="260.0" layoutY="162.0" prefWidth="150.0" />
      <Label fx:id="taskLabel" layoutX="170.0" layoutY="166.0" text="Select a Task:" />
      <Button fx:id="deleteButton" layoutX="199.0" layoutY="246.0" mnemonicParsing="false" onAction="#deleteTask" text="Delete" />
      <Button fx:id="backButton" layoutX="323.0" layoutY="246.0" mnemonicParsing="false" onAction="#backToMain" text="Back" />
      <Text fx:id="message" layoutX="277.0" layoutY="226.0" strokeType="OUTSIDE" strokeWidth="0.0" visible="false" />
   </children>
</AnchorPane>
