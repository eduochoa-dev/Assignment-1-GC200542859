<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="450.0" prefWidth="724.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.taskproject.TaskController">
   <children>
      <Text fx:id="softwareTitle" fill="#0f33b5" layoutX="253.0" layoutY="75.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Task Manager">
         <font>
            <Font name="Arial Bold" size="33.0" />
         </font>
      </Text>
      <TableView fx:id="tablev" layoutX="21.0" layoutY="133.0" prefHeight="301.0" prefWidth="684.0">
        <columns>
          <TableColumn fx:id="taskid" prefWidth="63.0" text="ID" />
          <TableColumn fx:id="taskName" prefWidth="125.0" text="Name" />
            <TableColumn fx:id="taskDesc" prefWidth="224.0" text="Description" />
            <TableColumn fx:id="taskStatus" minWidth="0.0" prefWidth="133.0" text="Status" />
            <TableColumn fx:id="taskDate" prefWidth="137.0" text="Date" />
        </columns>
      </TableView>
      <Button fx:id="createTask" layoutX="241.0" layoutY="96.0" mnemonicParsing="false" onAction="#gotoCreate" text="New Task" />
      <Button fx:id="editTask" layoutX="331.0" layoutY="96.0" mnemonicParsing="false" onAction="#goToUpdate" text="Edit Task" />
      <Button fx:id="DeleteTask" layoutX="422.0" layoutY="96.0" mnemonicParsing="false" onAction="#goToDelete" text="Delete Task" />
   </children>
</AnchorPane>
